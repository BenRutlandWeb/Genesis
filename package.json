{
  "name": "genesis",
  "version": "1.0.0",
  "description": "WordPress base theme built with the Genesis Framework",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@tailwindcss/typography": "^0.2.0",
    "cssnano": "^4.1.10",
    "postcss": "^8.0.9",
    "postcss-cli": "^8.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^5.0.0",
    "tailwindcss": "^1.8.10",
    "parcel-bundler": "^1.12.4"
  },
  "scripts": {
    "watch": "npm run watch-css | npm run watch-js",
    "watch-css": "postcss src/css/*.css -d assets/css -w",
    "watch-js": "parcel watch src/js/*.js -d assets/js --no-hmr --no-source-maps",
    "build": "npm run build-css && npm run build-js",
    "build-css": "env NODE_ENV=production postcss src/css/*.css -d assets/css",
    "build-js": "env NODE_ENV=production parcel build src/js/*.js -d assets/js --no-source-maps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenRutlandWeb/genesis.git"
  },
  "keywords": [
    "WordPress",
    "tailwind",
    "theme",
    "genesis"
  ],
  "author": "Ben Rutland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BenRutlandWeb/genesis/issues"
  },
  "homepage": "https://github.com/BenRutlandWeb/genesis#readme"
}
